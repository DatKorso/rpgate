{
  "name": "@rpgate/backend",
  "version": "0.0.1",
  "private": true,
  "description": "Backend API server with Fastify and Socket.io",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false --env-file=../../.env src/server.ts",
    "build": "pnpm clean && tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@fastify/cookie": "^10.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/secure-session": "^8.1.0",
    "@fastify/websocket": "^11.0.0",
    "@rpgate/database": "workspace:*",
    "@rpgate/shared": "workspace:*",
    "ai": "^4.0.38",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.37.0",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.4.2",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rpgate/tsconfig": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
